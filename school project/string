# Generate a random string
random_string = input('random_string:')

# Count the number of blank spaces, characters, words, and vowels
length=len(random_string)
blank_spaces = random_string.count(' ')
characters = len(random_string)
words = len(random_string.split())
vowels = len([letter for letter in random_string if letter in 'aeiouAEIOU'])

# Print the results
print("length:",length)
print("Random string:", random_string)
print("Number of blank spaces:", blank_spaces)
print("Number of characters:", characters)
print("Number of words:", words)
print("Number of vowels:", vowels)